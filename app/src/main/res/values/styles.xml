<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/tisaproTextViewStyle</item>
        <item name="android:switchTextAppearance">@style/switchTextViewStyle</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandableTextView">
        <item name ="android:background">@color/colorPrimary</item>
        <item name ="android:padding">16dp</item>
        <item name ="android:elevation">16dp</item>
        <item name ="android:foreground">?selectableItemBackground</item>
        <item name ="android:textStyle">bold</item>
        <item name ="android:textColor">#FFF</item>
        <item name ="android:textSize">20sp</item>
    </style>
    <style name="ExpandableTextViewTablet">
        <item name ="android:background">@color/colorPrimary</item>
        <item name ="android:padding">16dp</item>
        <item name ="android:elevation">16dp</item>
        <item name ="android:foreground">?selectableItemBackground</item>
        <item name ="android:textStyle">bold</item>
        <item name ="android:textColor">#FFF</item>
        <item name ="android:textSize">26sp</item>
    </style>

    <style name="tisaproTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/tisaproweb</item>
    </style>

    <style name="switchTextViewStyle">
        <item name="android:fontFamily">@font/tisaproweb</item>
    </style>

    <style name="locationDetailsTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="addressAndPhoneDetailsTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="locationDetailsTextStyleLand">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="addressAndPhoneDetailsTextStyleLand">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="locationDetailsTextStyle600dp">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="addressAndPhoneDetailsTextStyle600dp">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

</resources>
